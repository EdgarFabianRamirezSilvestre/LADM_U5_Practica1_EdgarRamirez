<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblActual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Ubicacion Actual:"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/lblEncuentras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:layout_marginTop="15dp"
        android:text="TE ENCUENTRAS EN:"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/linea1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="#FF0000" />

    <TextView
        android:id="@+id/lblNomUbi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Nombre de la Ubicacion:"
        android:textSize="18dp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/txtBuscarNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:background="@drawable/diseno_text"
        android:textSize="28dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnBuscarUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BUSCAR UBICACION"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/diseno_botones"
        android:fontFamily="serif-monospace"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lblMostrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15dp"
        android:padding="15dp"
        android:background="@drawable/diseno_text"
        android:fontFamily="serif-monospace"
        android:textAlignment="center"
        android:text="Espacio para mostrar busqueda"
        android:gravity="center_horizontal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtUbica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="UBICACIONES REGISTRADAS:"
                android:textColor="#1010A6"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/lblUbicaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:textColor="#1010A6"
                android:textSize="18dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>